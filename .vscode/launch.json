{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MCP Server (dev)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/upsun-mcp/src/index.ts",
      "preLaunchTask": "tsc: build - upsun-mcp/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/upsun-mcp/build/**/*.js"
      ],
      "cwd": "${workspaceFolder}/upsun-mcp",
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "DEBUG",
      },
      "console": "integratedTerminal",
    },
    {
      "name": "Debug MCP Server (Prod)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/upsun-mcp/src/index.ts",
      "preLaunchTask": "tsc: build - upsun-mcp/tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/upsun-mcp/build/**/*.js"
      ],
      "cwd": "${workspaceFolder}/upsun-mcp",
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "INFO",
      },
      "console": "integratedTerminal",
    }
  ]
}
