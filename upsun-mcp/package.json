{
  "name": "mcp-srv",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for Upsun cloud platform integration",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-srv": "./build/index.js"
  },
  "scripts": {
    "clean": "rm -rf build",
    "run": "node build/index.js",
    "build": "tsc -p tsconfig.json && chmod 755 build/index.js",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector http://localhost:3000 --header 'upsun-api-token: xxxx'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:coverage:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --watchAll=false --passWithNoTests",
    "coverage:report": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=text-lcov | coveralls",
    "coverage:check": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --passWithNoTests",
    "coverage:verify": "./scripts/check-coverage.sh"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "upsun-sdk-node": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/pino": "^7.0.4",
    "coveralls": "^3.1.1",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-html-reporters": "^3.1.7",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
