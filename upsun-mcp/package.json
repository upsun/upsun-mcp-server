{
  "name": "mcp-srv",
  "version": "0.2.0",
  "description": "A Model Context Protocol server for Upsun cloud platform integration",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-srv": "./build/index.js"
  },
  "scripts": {
    "clean": "rm -rf build",
    "run": "node build/index.js",
    "build": "tsc -p tsconfig.json && chmod 755 build/index.js",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector http://localhost:3000 --header 'upsun-api-token: xxxx'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:coverage:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --watchAll=false --passWithNoTests",
    "coverage:report": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=text-lcov | coveralls",
    "coverage:check": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --passWithNoTests",
    "coverage:verify": "./scripts/check-coverage.sh"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26",
    "@opentelemetry/api": "^1.9",
    "@opentelemetry/auto-instrumentations-node": "^0.70",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212",
    "@opentelemetry/resources": "^2.5",
    "@opentelemetry/sdk-node": "^0.212",
    "@opentelemetry/semantic-conventions": "^1.39",
    "dotenv": "^17.3",
    "dotenv-expand": "^12.0",
    "express": "^5.2",
    "pino": "^10.3",
    "pino-pretty": "^13.1",
    "upsun-sdk-node": "^0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0",
    "@types/jest": "^30.0",
    "@types/node": "^25.2",
    "@types/pino": "^7.0",
    "coveralls": "^3.1",
    "eslint": "^9.0.0",
    "jest": "^30.2",
    "jest-html-reporters": "^3.1",
    "prettier": "^3.8",
    "ts-jest": "^29.4",
    "ts-node": "^10.9",
    "typescript": "^5.9",
    "typescript-eslint": "8.50.0"
  }
}
